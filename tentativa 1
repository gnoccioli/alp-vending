#include<iostream>

using namespace std;

int main()
{
	int escolha, senha;
	int senha_adm = 123;

	do{
		
		cout << "* * * * MENU INICIAL * * * *" << endl << "Escolha uma das opcoes a seguir:" << endl << "[1] - Ver Menu;" << endl << "[2] - Entrar como ADMINISTRADOR" << endl << "[3] - Finalizar a consulta" << endl << "Digite sua opcao:";
		cin >> escolha;
	
		if(escolha <0 || escolha <=3)
		{
			switch (escolha)
			{
				case 1:
					system("cls");
					cout << "Ainda sem funcao"; //inserir funcao***
					break;
				case 2:
					{
					system("cls");
					cout << "Digite a senha do administrador: ";
					cin >> senha;
						if (senha == senha_adm)
							cout << "Ainda sem funcao"; //inserir funcao***
						else
							cout << "Senha incorreta! Tente novamente." << endl;
					break;
					}
				case 3:
					system("cls");
					cout << "Volte sempre!" << endl;
			}
		}
		else
			cout << "Digite uma opcao valida" << endl;
			
	}while(escolha!=3);
	
	return 0;
}
